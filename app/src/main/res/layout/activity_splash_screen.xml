<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/gradient_icon">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_splash"
        />

    <ImageView
        android:id="@+id/logo_icono"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_cinedore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/logo_filmoteca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_filmoteca"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="102dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="106dp"
        />

    <ImageView
        android:id="@+id/logo_ministerio"
        android:layout_width="72.72dp"
        android:layout_height="17.92dp"
        android:src="@drawable/logo_ministerio"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="102dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="106dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>